# Digi-King Telegram Bot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Get your bot token from @BotFather on Telegram
# 1. Message @BotFather
# 2. Send /newbot
# 3. Follow the prompts
# 4. Copy the token here
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot webhook configuration (for production deployment)
WEBHOOK_URL=https://your-domain.com/webhook
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# Local development: mongodb://localhost:27017/digi-king-bot
# Production: mongodb://username:password@host:port/database
MONGODB_URI=mongodb://localhost:27017/digi-king-bot

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for email automation
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Digi-King <noreply@digi-king.com>

# =============================================================================
# SOCIAL MEDIA API KEYS
# =============================================================================
# Buffer API for social media automation
BUFFER_ACCESS_TOKEN=your_buffer_access_token

# Instagram Basic Display API (optional)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Twitter API v2 (optional)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn API (optional)
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Facebook Graph API (optional)
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Admin API key for dashboard access (generate a strong random string)
ADMIN_API_KEY=your_secure_admin_api_key_here

# JWT secret for token signing (generate a strong random string)
JWT_SECRET=your_jwt_secret_here

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# COMMERCE & PAYMENTS
# =============================================================================
# Payment processor configuration (Stripe example)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal configuration (alternative)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# =============================================================================
# AFFILIATE & REFERRAL SETTINGS
# =============================================================================
# Commission rates (in percentage)
DEFAULT_AFFILIATE_COMMISSION=10
DEFAULT_REFERRAL_REWARD=5

# Minimum payout threshold (in dollars)
MINIMUM_PAYOUT_THRESHOLD=50

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Your business information
BUSINESS_NAME=Digi-King
BUSINESS_WEBSITE=https://digi-king.com
BUSINESS_SUPPORT_EMAIL=support@digi-king.com

# Default discount settings
DEFAULT_DISCOUNT_PERCENTAGE=15
DISCOUNT_CODE_LENGTH=8

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Environment mode
NODE_ENV=development

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# =============================================================================
# GDPR & COMPLIANCE
# =============================================================================
# Data retention period (in days)
DATA_RETENTION_DAYS=365

# Privacy policy URL
PRIVACY_POLICY_URL=https://digi-king.com/privacy

# Terms of service URL
TERMS_OF_SERVICE_URL=https://digi-king.com/terms

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Analytics service configuration (Google Analytics example)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Error tracking (Sentry example)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Production deployment settings
HOST=localhost
PRODUCTION_URL=https://your-production-domain.com

# SSL configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database backup configuration
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups/digi-king

# Cloud storage for backups (AWS S3 example)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=digi-king-backups

# =============================================================================
# ADDITIONAL SETTINGS
# =============================================================================
# Admin Users (Telegram User IDs - comma separated)
ADMIN_USER_IDS=123456789,987654321

# Campaign Advanced Settings
MAX_DISCOUNT_PERCENTAGE=50
CODE_EXPIRY_DAYS=7

# Email Validation Service (Optional)
EMAIL_VALIDATION_API_KEY=your_email_validation_api_key

# Commerce Platform Integration
COMMERCE_API_URL=https://your-commerce-platform.com/api
COMMERCE_API_KEY=your_commerce_api_key
COMMERCE_WEBHOOK_SECRET=your_commerce_webhook_secret

